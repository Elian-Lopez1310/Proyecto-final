@model RealEstateApp.Web.ViewModels.FiltroPropiedadViewModel

@{
    int contador = 0;

    var code = Model?.Codigo?.Trim();
    var resultados = (IEnumerable<RealEstateApp.Shared.Dtos.PropiedadDto>)Model.Resultados ?? Enumerable.Empty<RealEstateApp.Shared.Dtos.PropiedadDto>();


    if (!string.IsNullOrWhiteSpace(code))
    {
        resultados = resultados
            .Where(r => !string.IsNullOrWhiteSpace(r.Codigo) &&
                        string.Equals(r.Codigo.Trim(), code, StringComparison.OrdinalIgnoreCase));
    }
}

@if (resultados == null || !resultados.Any())
{
    <div class="alert alert-warning text-center">No se encontraron propiedades que coincidan con los filtros.</div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 justify-content-center">
        @foreach (var item in resultados)
        {
           
            var imagenAsignada = !string.IsNullOrWhiteSpace(item.ImagenUrl) ? item.ImagenUrl
            : !string.IsNullOrWhiteSpace(item.FotoPrincipal) ? item.FotoPrincipal
            : "/images/propiedades/placeholder.jpg";

            var detalleUrl = Url.Action("Detalle", "Propiedad", new { codigo = item.Codigo });

            contador++;

            <div class="col">
                <div class="card h-100 shadow-lg border-0 rounded-4 propiedad-card"
                     data-url="@detalleUrl"
                     onclick="location.href='@detalleUrl';"
                     style="cursor: pointer; transition: transform 0.2s;">
                    <img src="@Url.Content(imagenAsignada)"
                         alt="Imagen propiedad"
                         class="img-fluid rounded-top"
                         style="height: 200px; object-fit: cover;"
                         onerror="this.onerror=null; this.src='/images/propiedades/placeholder.jpg';" />
                    <div class="card-body p-3 pb-2">
                        <h6 class="card-title fw-semibold text-truncate">@item.Tipo - @item.Ubicacion</h6>
                        <p class="mb-1 small">
                            <strong>@item.TipoVenta:</strong>
                            US$ @item.Precio.ToString("N2")
                        </p>
                        <p class="mb-2 text-muted small">Código: @item.Codigo</p>
                        <div class="d-flex justify-content-between align-items-center small text-muted">
                            <span>🛏 @item.Habitaciones</span>
                            <span>🛁 @item.Banos</span>
                            <span>📐 @item.MetrosCuadrados m²</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
