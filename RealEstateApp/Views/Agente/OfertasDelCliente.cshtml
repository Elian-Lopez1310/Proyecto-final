@model IEnumerable<RealEstateApp.Web.ViewModels.OfertaViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAgente.cshtml";
    ViewData["Title"] = "Ofertas del cliente";
    var propiedadId = (int)ViewBag.PropiedadId;
    var clienteId = (int)ViewBag.ClienteId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">📄 Ofertas de este cliente</h3>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("ListaClientesOfertas", "Agente", new { propiedadId })">← Volver a clientes</a>
            <a class="btn btn-outline-primary btn-sm" target="_blank" href="@Url.Action("Detalle", "Propiedad", new { codigo = ViewBag.CodigoPropiedad })">Ver propiedad</a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-light">Este cliente aún no ha realizado ofertas.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Monto</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        var esPendiente = string.Equals(o.Estado, "Pendiente", StringComparison.OrdinalIgnoreCase);
                        <tr>
                            <td>@o.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>US$ @o.Monto.ToString("N2")</td>
                            <td>
                                <span class="badge
                                            @(o.Estado?.ToLower() == "aceptada" ? "bg-success" :
                                                                            o.Estado?.ToLower() == "rechazada" ? "bg-danger" : "bg-warning text-dark")">
                            @o.Estado
                        </span>
                    </td>
                    <td class="text-end">
                        @if (esPendiente)
                                {
                                    <form class="d-inline" method="post" action="@Url.Action("ResponderOferta","Agente")">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="ofertaId" value="@o.Id" />
                                        <input type="hidden" name="aceptar" value="true" />
                                        <button type="submit" class="btn btn-sm btn-success"
                                                onclick="return confirm('¿Aceptar esta oferta? Se rechazarán las demás pendientes y la propiedad quedará vendida.');">
                                            Aceptar
                                        </button>
                                    </form>
                                    <form class="d-inline" method="post" action="@Url.Action("ResponderOferta","Agente")">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="ofertaId" value="@o.Id" />
                                        <input type="hidden" name="aceptar" value="false" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('¿Rechazar esta oferta?');">
                                            Rechazar
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
