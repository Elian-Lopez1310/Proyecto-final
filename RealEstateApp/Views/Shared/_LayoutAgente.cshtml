@{
    Layout = null;
    var usuarioNombre = Context.Session.GetString("UsuarioNombre") ?? "Agente";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Panel del Agente</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body>
  
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/Agente/HomeAgente">🏠 Inmobiliaria - Agente</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAgente">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarAgente">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <span class="nav-link text-white fw-bold">👤 @usuarioNombre</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Propiedad/Publicar">📤 Publicar</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Propiedad/Mantenimientodepropiedades"> Mantenimiento de propiedades </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Cuenta" asp-action="CerrarSesion">🚪 Cerrar sesión</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>


    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>


    <footer class="text-center text-muted py-3 border-top">
        <small>© @DateTime.Now.Year - Sistema de Bienes Raíces - Panel del Agente</small>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
